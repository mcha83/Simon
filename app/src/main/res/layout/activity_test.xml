<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/back"
    tools:context="com.bradleywilcox.simon.TestActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/simon"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScore"
        android:textColor="@android:color/white"
        android:layout_marginStart="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="17dp" />


    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/rbNormal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbNormal"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:layout_alignBottom="@+id/rbTurbo"
            android:layout_alignStart="@+id/tvScore" />

        <RadioButton
            android:text="Reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbReverse"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:text="Turbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbTurbo"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/tvHighScore" />

    </RadioGroup>

    <Button
        android:text="Yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:text="High Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHighScore"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/tvScore"
        android:layout_alignBottom="@+id/tvScore"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="28dp" />

    <Button
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2" />

    <Button
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_below="@+id/button2"
        android:layout_alignEnd="@+id/radioGroup2"
        android:layout_marginTop="35dp" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignStart="@+id/button4" />


</RelativeLayout>
